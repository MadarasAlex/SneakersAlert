<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/orders_back"
    android:backgroundTint="#D1D4D8">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1D4D8"
        android:backgroundTint="#D1D4D8"
        app:cardElevation="75dp"
        app:cardPreventCornerOverlap="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/order_back"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/liberation_sans"
                android:text="2021-0001"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.547" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:ems="10"
                android:fontFamily="@font/liberation_sans"
                android:inputType="date"
                android:singleLine="true"
                android:text="30-03-2021"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/order_number"
                app:layout_constraintStart_toEndOf="@+id/order_number"
                app:layout_constraintTop_toTopOf="@+id/order_number"
                app:layout_constraintWidth_percent="0.335" />

            <TextView
                android:id="@+id/order_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/liberation_sans"
                android:text="A. M."
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/order_date"
                app:layout_constraintStart_toEndOf="@+id/order_date"
                app:layout_constraintTop_toTopOf="@+id/order_date"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/liberation_sans"
                android:text="â‚¬110.00"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/order_person"
                app:layout_constraintStart_toEndOf="@+id/order_person"
                app:layout_constraintTop_toTopOf="@+id/order_person"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.14" />

            <TextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/liberation_sans"
                android:text="VIEW"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/order_price"
                app:layout_constraintStart_toEndOf="@+id/order_price"
                app:layout_constraintTop_toTopOf="@+id/order_price"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>