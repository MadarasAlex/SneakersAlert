<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1D4D8"
        tools:context=".ui.faq.FAQFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/faq_back_shape"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="6"
            tools:listitem="@layout/card_faq" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/faq_back_shape"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerViewFAQ">

                <ImageView
                    android:id="@+id/contact2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="104dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.11"
                    app:srcCompat="@drawable/path_1395" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/rubik"
                    android:text="Contact. \nSneakers.alert@outlook.com"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/contact2"
                    app:layout_constraintStart_toEndOf="@+id/contact2"
                    app:layout_constraintTop_toTopOf="@+id/contact2" />

                <TextView
                    android:id="@+id/eu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/rubik"
                    android:text="EU SHIPPING"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/delivery2"
                    app:layout_constraintHeight_percent="0.03"
                    app:layout_constraintStart_toEndOf="@+id/delivery2"
                    app:layout_constraintTop_toTopOf="@+id/delivery2"
                    app:layout_constraintWidth_percent="0.4" />

                <ImageView
                    android:id="@+id/delivery2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@+id/contact2"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintStart_toStartOf="@+id/contact2"
                    app:layout_constraintWidth_percent="0.12"
                    app:srcCompat="@drawable/delivery2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/visa"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@+id/idea"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/idea"
            app:layout_constraintTop_toTopOf="@+id/idea"
            app:layout_constraintWidth_percent="0.73"
            app:srcCompat="@drawable/pngegg" />

        <ImageView
            android:id="@+id/idea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/visa"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.18"
            app:srcCompat="@drawable/ideal_logo_black_and_white" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.86" />

    </androidx.constraintlayout.widget.ConstraintLayout>
